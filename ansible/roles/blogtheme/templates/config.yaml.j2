blog:
  title: monkinetic.blog
  subhead: Since 1999, XVI Edition
  url: "{{ blog_url }}"
  author:
    name: Steve Ivy
    email: steveivy@gmail.com
    image: "http://monkinetic.blog/static/images/sivy_avatar_256.png"
  meta:
    footer_text: "&copy; Copyright 1999-2019, Steve Ivy"
    description: >
      The weblog of Steve Ivy, going since 1999 in one form or another. Still something of a CMS junkie.<br/><br/>XVI Edition.
    twitter_id: "@steveivy"

postsdir: "{{ blog_posts | default(content_location + "/posts") }}"
uploadsdir: "{{ blog_uploads | default(content_location + "/uploads")  }}"
templatesdir: "{{ blog_templates | default(theme_location + "/templates")  }}"
staticdir: "{{ blog_static | default(theme_location + "/static")  }}"

webmentionenabled: true

services:
  - name: github
    id: sivy
    link: "https://github.com/sivy/"
    class: fa-github
  - name: mastodon
    id: "@toot.cafe/sivy"
    link: "https://toot.cafe/@sivy"
    class: fa-mastodon
  - name: twitter
    id: "@steveivy"
    link: "https://twitter.com/steveivy"
    class: fa-twitter

links:
    - name: "10 Books About Race To Read Instead Of Asking A Person Of Color To Explain Things To You"
      link: https://www.bustle.com/p/10-books-about-race-to-read-instead-of-asking-a-person-of-color-to-explain-things-to-you-8548796
      class: fas fa-fist-raised
    - name: COVID - AZDHS
      link: https://www.azdhs.gov/preparedness/epidemiology-disease-control/infectious-disease-epidemiology/index.php#novel-coronavirus-home
      class: fas fa-biohazard
    - name: COVID - Al Jezeera
      link: https://www.aljazeera.com/topics/events/coronavirus-outbreak.html#
      class: fas fa-biohazard
    - name: Global Social Theory
      link: https://globalsocialtheory.org
      class: fas fa-globe-africa

signin:
    username: "{{ blog_auth_user }}"
    password: "{{ blog_auth_password}}"

server:
    location: "{{ blog_server_location }}"
    port: "{{ blog_server_port }}"

twitter:
  clientkey: "{{ twitter_client_key}}"
  clientsecret: "{{ twitter_client_secret }}"
  accesskey: "{{ twitter_access_key}}"
  accesssecret: "{{ twitter_access_secret }}"

mastodon:
  site: "https://toot.cafe"
  clientid: "{{ mastodon_client_id }}"
  clientsecret: "{{ mastodon_client_secret }}"
  accesstoken: "{{ mastodon_access_token }}"